@REM RewriteEngine On

@REM # Redirect .html to clean URL
@REM RewriteCond %{THE_REQUEST} \s/([^.]+)\.html\s [NC]
@REM RewriteRule ^ %1 [R=301,L]

@REM # Internally load .html file
@REM RewriteCond %{REQUEST_FILENAME} !-d
@REM RewriteCond %{REQUEST_FILENAME}.html -f
@REM RewriteRule ^(.+)$ $1.html [L]

RewriteEngine On

# -------------------------------
# Clean product URLs
# /products/slug
# -------------------------------
RewriteRule ^products/([a-zA-Z0-9\-]+)$ /product-single.html?id=$1 [L,QSA]

# -------------------------------
# Hide index.html
# -------------------------------
RewriteCond %{THE_REQUEST} /index\.html [NC]
RewriteRule ^index\.html$ / [R=301,L]

# -------------------------------
# Hide .html from normal pages
# -------------------------------
RewriteCond %{THE_REQUEST} \s/([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]

ErrorDocument 404 /404.html

<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

